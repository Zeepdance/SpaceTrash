              uncommon: 'bg-green-500/20 border-green-400',
              rare: 'bg-blue-500/20 border-blue-400',
              epic: 'bg-purple-500/20 border-purple-400',
              legendary: 'bg-yellow-500/20 border-yellow-400',
              mythic: 'bg-red-500/20 border-red-400'
